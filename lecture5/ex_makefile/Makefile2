CC=g++
CXXFLAGS=-W -Wall
TARGET=todo
CCall: $(TARGET)

todo: my_memo.o my_cal.o main.o
	$(CC) $(CXXFLAGS) -o $(TARGET) my_memo.o my_cal.o main.o

my_memo.o: my_memo.cc
	$(CC) $(CXXFLAGS) -c -o my_memo.o my_memo.cc

my_cal.o: my_cal.cc
	$(CC) $(CXXFLAGS) -c -o my_cal.o my_cal.cc

main.o: main.cc
	$(CC) $(CXXFLAGS) -c -o main.o main.cc

clean:
	rm -rf *.o todo
